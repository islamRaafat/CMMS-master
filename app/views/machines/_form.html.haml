= form_for @machine, :html => { :class => "form-horizontal", :multipart => true } do |f|
  %fieldset
    %legend Machine Form
    .control-group
      = f.label :ref_machine_type_id, "Machine Type", { :class => "control-label" }
      .controls= f.select :ref_machine_type_id, @machine_types.map{|m| [m.name, m.id]}
    .control-group.info
      = f.label :model, nil, { :class => "control-label" }
      .controls= f.text_field :model, :required => true
    .control-group.info
      = f.label :name, nil, { :class => "control-label" }
      .controls= f.text_field :name, :required => true
    .control-group
      = f.label :power, nil, { :class => "control-label" }
      .controls= f.text_field :power
    .control-group
      = f.label :dimension, nil, { :class => "control-label" }
      .controls= f.text_field :dimension
    .control-group
      = f.label :weigth, nil, { :class => "control-label" }
      .controls= f.number_field :weigth
    .control-group
      = f.label :supplier_company, nil, { :class => "control-label" }
      .controls= f.text_field :supplier_company
    .control-group
      = f.label :acquired_date, nil, { :class => "control-label" }
      .controls= f.date_select :acquired_date
    .control-group
      = f.label :remark, nil, { :class => "control-label" }
      .controls= f.text_area :remark, :size => "70x2"
    .control-group
      = f.label :picture, nil, { :class => "control-label" }
      .controls= f.file_field :picture
    .form-actions
      = f.submit nil, :disable_with => "loading ...", :class => "btn btn-primary" 
      = link_to "Cancel", machines_path 
